{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2016",
    "module": "commonjs",
    "noEmit": true,
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2015.iterable"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
